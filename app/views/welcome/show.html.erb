  <h1 class="title">Welcome to Secret Journal!</h1>
  <% if signed_in? %>
  <div class="links">
    <h1><a class="link" href="/user/<%=session[:user_id]%>/posts">View My Posts</a></h1>
    <h1><a class="link" href="/posts/new">Create a Post</a></h1>
  </div>
  <div class="posts">
    <% if @posts.length != 0 %>
      <% @posts.each do |post| %>
        <h1 class="post-alias"><%= post.alias %></h1>
        <h1 class="post-date"><%= post.created_at.strftime("%B %e, %Y") %></h1>
        <p class="post-content"><%= post.content %></p>
        <hr>
      <% end %>
    <% else %>
      <h1 class="no-posts">Woops! There Aren't Any Posts Yet</h1>
      <h1 class="no-posts">Be the First Poster!</h1>
    <% end %>
  </div>

  <% else %>
  <h1>Please Sign in First</h1>
  <% end %>
